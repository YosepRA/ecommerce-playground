{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "plugin:prettier/recommended"
  ],
  "root": true,
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "arrow-parens": ["error", "always"],
    "implicit-arrow-linebreak": "off",
    "object-curly-newline": "off",
    "no-param-reassign": "off",
    "operator-linebreak": "off",
    "no-console": "off",
    "no-alert": "off",
    "react/prop-types": "off",
    "react/jsx-one-expression-per-line": "off",
    "react/jsx-props-no-spreading": "off",
    "import/extensions": ["error", "always", { "ignorePackages": true }],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "arrowParens": "always",
        "endOfLine": "auto",
        "trailingComma": "all"
      }
    ]
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
